// 评论背景色
.comments{
  margin: 0px;
  padding: 3%;
  background: #fff;
  border-radius:8px;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
}

// 分页工具条
.pagination{
  margin: 50px 0 40px;
}

// copy
.content-wrap {
  padding: initial;
  background: initial;
  box-shadow: initial;
  border-radius: initial;
}
// 文章阴影背景
.post-block {
  margin-bottom: 15px;
  background: #fff;
  padding: 8px 3% !important;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
  border-radius: 10px 10px 10px 10px;
}
.posts-expand {
  padding-top: initial;
  margin: 0px;
}
.post-eof {
  display: none !important;
}
.main {
  padding-bottom: initial;
}
.footer {
  bottom: auto;
}
.main-inner {
  background: #fff;
  opacity: 0.85;
}
.bg_content {
  position: fixed;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}